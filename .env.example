# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/her_db

# JWT Authentication
JWT_SECRET=CHANGE_ME_GENERATE_WITH_openssl_rand_hex_32
JWT_EXPIRES_IN=15m

# Encryption (32 bytes hex for AES-256)
ENCRYPTION_KEY=CHANGE_ME_GENERATE_WITH_openssl_rand_hex_32

# Admin bootstrap (one-time, to promote your first user to ADMIN)
ADMIN_BOOTSTRAP_TOKEN=CHANGE_ME_LONG_RANDOM_AT_LEAST_16

# OpenRouter API (optional - users can provide their own keys)
OPENROUTER_API_KEY=your-openrouter-api-key
OPENROUTER_SITE_URL=https://your-domain.com
OPENROUTER_APP_NAME=Her

# Frontend
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_APP_NAME=Her

# CORS
CORS_ORIGIN=http://localhost:3000

# Streaming guardrails
# Max parallel /api/messages/stream requests per user (in-memory, per backend instance)
MAX_CONCURRENT_STREAMS_PER_USER=2

# Node Environment
NODE_ENV=development
